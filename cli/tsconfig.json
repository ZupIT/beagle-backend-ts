{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist",
    "noImplicitAny": true,
    "lib": ["es2015", "es2016", "es2017", "es2018", "es2019", "dom"],
    "outDir": "./dist",
    "moduleResolution": "node",
    "sourceMap": true,
    "isolatedModules": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
