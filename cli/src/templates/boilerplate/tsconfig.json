{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "preserveConstEnums": true,
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,
    "noImplicitOverride": true,
    "jsx": "react",
    "reactNamespace": "BeagleJSX",
    "lib": ["es6"],
    "baseUrl": "./",
  },
  "exclude": ["**/node_modules"],
}
